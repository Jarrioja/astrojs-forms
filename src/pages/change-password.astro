---
import Layout from "../layouts/Layout.astro";
import ConnectionForm from "../components/ConnectionForm.astro";
import ChangePasswordForm from "../components/ChangePasswordForm.astro";
import ToastMessage from "../components/ToastMessage.astro";
---

<Layout title='Change Password.'>
  <main>
    <h1>Change Password</h1>
    <ConnectionForm />
    <ChangePasswordForm />

    <div
      id='message'
      class='toast align-items-center text-bg-primary border-0'
      role='alert'
      aria-live='assertive'
      aria-atomic='true'
    >
      <div class='d-flex'>
        <div id='message-body' class='toast-body'>
          Hello, world! This is a toast message.
        </div>
        <button
          type='button'
          class='btn-close btn-close-white me-2 m-auto'
          data-bs-dismiss='toast'
          aria-label='Close'></button>
      </div>
    </div>
  </main>
</Layout>

<script>
  const urlSearchParams = new URLSearchParams(window.location.search);
  const params = Object.fromEntries(urlSearchParams.entries());

  const changePasswordForm = document.getElementById("change-password");

  changePasswordForm.addEventListener("submit", changePassword);

  function changePassword(e: { preventDefault: () => void }) {
    e.preventDefault();
    const HOST = document.getElementById("HOST") as HTMLInputElement | null;
    const messageElement = document.getElementById("message");
    const messageBody = document.getElementById("message-body");

    const toastBootstrap = bootstrap.Toast.getOrCreateInstance(messageElement);
    const password = document.getElementsByName(
      "change-password"
    )[0] as HTMLInputElement | null;
    const passwordToConfirm = document.getElementsByName(
      "confirm-input"
    )[0] as HTMLInputElement | null;

    fetch(`${HOST.value}/api/sessions/change-password/?token=${params.token}`, {
      method: "POST",
      body: JSON.stringify({
        password: password.value,
        passwordToConfirm: passwordToConfirm.value,
      }),
      headers: {
        "Content-type": "application/json; charset=UTF-8",
      },
    })
      .then((response) => response.json())
      .then((data) => {
        console.log(
          "üöÄ ~ file: change-password.astro:50 ~ .then ~ data:",
          data
        );

        // Verificar si la respuesta tiene una propiedad 'success' o 'error'
        if (data.status === "success") {
          messageBody.innerText = "Contrase√±a restablecida con √©xito";
          toastBootstrap.show();
        } else {
          messageBody.innerText = "Ocurri√≥ un error desconocido";
          toastBootstrap.show();
        }
      })
      .catch((error) => {
        console.error("Error al enviar la solicitud:", error);
        messageElement.innerText = "Ocurri√≥ un error en el servidor";
      });
  }
</script>
